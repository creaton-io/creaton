{
  "name": "creaton-web",
  "version": "0.0.1",
  "dependencies": {
    "@curi/interactions": "^2.0.3",
    "@curi/router": "^2.1.2",
    "@curi/svelte": "^2.0.0-beta.6",
    "@ethersproject/bignumber": "^5.0.8",
    "@ethersproject/bytes": "^5.0.5",
    "@ethersproject/contracts": "^5.0.5",
    "@ethersproject/providers": "^5.0.13",
    "@ethersproject/solidity": "^5.0.5",
    "@hickory/browser": "^2.1.0",
    "@urql/core": "^1.13.1",
    "@urql/devtools": "^2.0.2",
    "buffer": "^5.6.0",
    "creaton-common": "../common-lib",
    "graphql": "^15.3.0",
    "named-logs": "0.0.13",
    "named-logs-console": "0.0.14",
    "smelte": "^1.0.16",
    "svelte": "3.25.1",
    "svelte-hmr": "0.10.3",
    "svelte-routing": "^1.4.2",
    "web3w": "^0.2.36",
    "web3w-portis-loader": "^0.2.0",
    "web3w-torus-loader": "^0.2.4",
    "web3w-walletconnect-loader": "^0.2.0",
    "wonka": "^4.0.14"
  },
  "devDependencies": {
    "@tailwindcss/ui": "^0.5.0",
    "@tsconfig/svelte": "^1.0.8",
    "@types/favicons": "^5.5.0",
    "@types/fs-extra": "^9.0.2",
    "@types/node": "^14.14.0",
    "autoprefixer": "^9.8.6",
    "favicons": "^6.2.0",
    "fs-extra": "^9.0.1",
    "ipfs-deploy": "^8.0.1",
    "ipfs-gateway-emulator": "^4.2.1-ipfs.1",
    "svelte-check": "^1.0.60",
    "svelte-preprocess": "^4.5.1",
    "svite": "^0.7.2",
    "tailwindcss": "^1.9.5",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.0.3",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "prepare": "npm link ../common-lib && node use_ethers_browser_modules.js && npm run generate",
    "validate": "svelte-check && tsc --noEmit",
    "dev": "svite -ts",
    "build": "svite build -ts && npm run spa2static",
    "build:dev": "svite build -ts --mode development && npm run spa2static",
    "serve": "ipfs-emulator --only -d dist -p 8080",
    "build:serve": "npm run build && npm run serve",
    "generate": "ts-node --project _build/tsconfig.json _build/generate.ts",
    "spa2static": "node _build/fixPages.js && ts-node --project _build/tsconfig.json -r tsconfig-paths/register -r svelte/register _build/spa2static.ts",
    "deploy": "ipfs-deploy -p pinata -s creaton dist"
  }
}
