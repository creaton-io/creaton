{
  "name": "creaton-contracts",
  "description": "Smart contracts for Creaton",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "@ethereum-waffle/chai": "^3.2.1",
    "@ethersproject/bignumber": "^5.0.13",
    "@ethersproject/bytes": "^5.0.9",
    "@ethersproject/solidity": "^5.0.8",
    "@ethersproject/wallet": "^5.0.10",
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^3.3.0",
    "@superfluid-finance/ethereum-contracts": "^0.2.2",
    "@tenderly/hardhat-tenderly": "^1.0.6",
    "@truffle/contract": "^4.3.5",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.21",
    "chai": "^4.2.0",
    "chai-ethers": "0.0.1",
    "creaton-common": "../common-lib",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "ethers": "^5.0.26",
    "hardhat": "^2.0.8",
    "hardhat-deploy": "^0.7.0-beta.44",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "mocha": "^8.1.1",
    "solidity-coverage": "^0.7.14",
    "ts-node": "^9.1.1",
    "typescript": "^3.8.3",
    "web3": "^1.3.1"
  },
  "scripts": {
    "prepare": "npm link ../common-lib",
    "test": "cross-env HARDHAT_DEPLOY_FIXTURE=true HARDHAT_COMPILE=true mocha --bail --recursive test",
    "coverage": "hardhat --network coverage coverage",
    "dev": "hardhat node --watch",
    "goerlidev": "hardhat node --watch",
    "compile": "hardhat compile",
    "local:dev": "hardhat --network localhost deploy --watch",
    "local:deploy": "hardhat --network localhost deploy",
    "local:run": "cross-env HARDHAT_NETWORK=localhost ts-node --files",
    "local:seed": "cross-env HARDHAT_NETWORK=localhost ts-node --files scripts/seed.ts",
    "local:export": "hardhat export",
    "void:deploy": "hardhat deploy",
    "staging:deploy": "hardhat --network staging deploy --show-stack-traces",
    "staging:export": "hardhat --network staging export",
    "staging:seed": "cross-env HARDHAT_NETWORK=staging ts-node --files scripts/seed.ts",
    "rinkeby:deploy": "hardhat --network rinkeby deploy",
    "rinkeby:export": "hardhat --network rinkeby export",
    "rinkeby:seed": "cross-env HARDHAT_NETWORK=rinkeby ts-node --files scripts/seed.ts",
    "kovan:deploy": "hardhat --network kovan deploy",
    "kovan:export": "hardhat --network kovan export",
    "goerli:seed": "cross-env HARDHAT_NETWORK=goerli ts-node --files scripts/seed.ts",
    "goerli:deploy": "hardhat --network goerli deploy",
    "goerli:export": "hardhat --network goerli export",
    "mainnet:deploy": "hardhat --network mainnet deploy",
    "mainnet:export": "hardhat --network mainnet export",
    "rinkeby:run": "cross-env HARDHAT_NETWORK=rinkeby ts-node --files",
    "hardhat": "hardhat"
  }
}
